{
  "manifest_version": 3,
  "name": "Prism Wallet",
  "version": "1.0.0",
  "description": "A beautiful Solana wallet with prism-inspired design",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.solana.com/*",
    "https://*.helius.xyz/*",
    "https://*.quicknode.pro/*",
    "https://quote-api.jup.ag/*",
    "https://token.jup.ag/*",
    "https://price.jup.ag/*",
    "https://dev.jup.ag/*",
    "https://lite-api.jup.ag/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Prism Wallet",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}